{
  "name": "server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "nest build",
    "db:generate": "prisma generate",
    "db:migrate:create": "prisma migrate dev --create-only --name ",
    "db:migrate:reset": "prisma migrate reset --force",
    "db:migrate:apply": "prisma migrate deploy",
    "db:admin": "npx prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "npm run db:migrate init_db && npm run db:generate",
    "email:dev": "open https://mjml.io/try-it-live",
    "dev:setup": "npm run db:migrate:reset && npm run db:migrate:apply && npm run db:generate && npm run db:seed && stripe login",
    "stripe:listener": "stripe listen --forward-to localhost:4000/payments/webook",
    "dev": "concurrently 'nest start --watch' 'npm run stripe:listener'",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "start": "nest start",
    "test:setup": "dotenv -e .env.test prisma migrate reset --force && dotenv -e .env.test prisma migrate deploy && dotenv -e .env.test prisma generate && dotenv -e .env.test -- npm run db:seed",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npx dotenv -e .env.test -- jest -i --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "dependencies": {
    "@axiomhq/winston": "^1.0.0-rc.1",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/platform-express": "^9.0.0",
    "@prisma/client": "^5.0.0",
    "algoliasearch": "^4.20.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "dayjs": "^1.11.10",
    "dotenv-cli": "^7.3.0",
    "handlebars": "^4.7.8",
    "mjml": "^4.14.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "stripe": "^14.4.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.4.3",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.4",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.18",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.1",
    "jest": "29.3.1",
    "jsonwebtoken": "^9.0.1",
    "prisma": "^5.0.0",
    "source-map-support": "^0.5.20",
    "stripe-event-types": "^3.1.0",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}